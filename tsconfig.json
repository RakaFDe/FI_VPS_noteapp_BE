{
  "compilerOptions": {
    "target": "ES2022",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "lib": ["ES2022"],
    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"]
    },

    "noEmit": true
  },
  "include": [
    "src/**/*",
    "drizzle.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
