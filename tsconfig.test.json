{
  "compilerOptions": {
    "target": "ES2022",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "lib": ["ES2022"],
    "types": ["node", "jest"],   // ⬅️ TAMBAHKAN INI

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"]
    },

    "noEmit": true,
    "isolatedModules": true      // ⬅️ PENTING (lihat poin 2)
  }
}
